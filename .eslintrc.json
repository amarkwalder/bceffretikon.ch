{
    "root": true,
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "prettier/prettier": "error"
    },
    "settings": {},
    "overrides": [
        {
            "files": ["**/*.svelte"],
            "plugins": ["svelte3"],
            "processor": "svelte3/svelte3"
        }
    ]
}
